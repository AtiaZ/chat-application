<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             version="2.0"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd
   http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
   <portlet>
     <portlet-name>ChatApplication</portlet-name>
     <display-name xml:lang="EN">Chat Application</display-name>
     <portlet-class>org.benjp.portlet.chat.ChatPortlet</portlet-class>
     <init-param>
       <name>juzu.run_mode</name>
       <value>prod</value>
     </init-param>
     <supports>
       <mime-type>text/html</mime-type>
     </supports>
     <supported-locale>en</supported-locale>
     <supported-locale>fr</supported-locale>
     <resource-bundle>locale.portlet.chat.Resource</resource-bundle>
     <portlet-info>
       <title>Chat Application</title>
       <keywords>Chat</keywords>
     </portlet-info>
     <portlet-preferences>
       <preference>
         <name>view</name>
         <value>normal</value>
         <read-only>false</read-only>
       </preference>
       <preference>
         <name>fullscreen</name>
         <value>false</value>
         <read-only>false</read-only>
       </preference>
     </portlet-preferences>
   </portlet>

   <portlet>
     <portlet-name>ChatNotificationApplication</portlet-name>
     <display-name xml:lang="EN">Chat Notification Application</display-name>
     <portlet-class>org.benjp.portlet.notification.NotificationPortlet</portlet-class>
     <init-param>
       <name>juzu.run_mode</name>
       <value>prod</value>
     </init-param>
     <supports>
       <mime-type>text/html</mime-type>
     </supports>
     <supported-locale>en</supported-locale>
     <supported-locale>fr</supported-locale>
     <resource-bundle>locale.portlet.chat.Resource</resource-bundle>
     <portlet-info>
       <title>Chat Notification Application</title>
       <keywords>Chat</keywords>
     </portlet-info>
     <portlet-preferences>
       <preference>
         <name>title</name>
         <value>---</value>
         <read-only>false</read-only>
       </preference>
     </portlet-preferences>
   </portlet>

   <portlet>
     <portlet-name>ChatMiniApplication</portlet-name>
     <display-name xml:lang="EN">Chat Mini Application</display-name>
     <portlet-class>org.benjp.portlet.minichat.MinichatPortlet</portlet-class>
     <init-param>
       <name>juzu.run_mode</name>
       <value>prod</value>
     </init-param>
     <supports>
       <mime-type>text/html</mime-type>
     </supports>
     <supported-locale>en</supported-locale>
     <supported-locale>fr</supported-locale>
     <resource-bundle>locale.portlet.chat.Resource</resource-bundle>
     <portlet-info>
       <title>Chat Mini Application</title>
       <keywords>Chat</keywords>
     </portlet-info>
     <portlet-preferences>
       <preference>
         <name>title</name>
         <value>---</value>
         <read-only>false</read-only>
       </preference>
     </portlet-preferences>
   </portlet>

   <portlet>
     <portlet-name>ChatStatisticsApplication</portlet-name>
     <display-name xml:lang="EN">Chat Statistics Application</display-name>
     <portlet-class>org.benjp.portlet.statistics.StatisticsPortlet</portlet-class>
     <init-param>
       <name>juzu.run_mode</name>
       <value>prod</value>
     </init-param>
     <supports>
       <mime-type>text/html</mime-type>
     </supports>
     <supported-locale>en</supported-locale>
     <supported-locale>fr</supported-locale>
     <resource-bundle>locale.portlet.chat.Resource</resource-bundle>
     <portlet-info>
       <title>Chat Statistics Application</title>
       <keywords>Chat</keywords>
     </portlet-info>
   </portlet>


  <filter>
    <filter-name>ResponseFilter</filter-name>
    <filter-class>org.benjp.portlet.chat.ResponseFilter</filter-class>
    <lifecycle>RENDER_PHASE</lifecycle>
  </filter>
  <filter>
    <filter-name>ResponseFilterWeemo</filter-name>
    <filter-class>org.benjp.portlet.notification.ResponseFilter</filter-class>
    <lifecycle>RENDER_PHASE</lifecycle>
  </filter>

  <filter-mapping>
    <filter-name>ResponseFilter</filter-name>
    <portlet-name>ChatApplication</portlet-name>
  </filter-mapping>
  <filter-mapping>
    <filter-name>ResponseFilterWeemo</filter-name>
    <portlet-name>ChatNotificationApplication</portlet-name>
  </filter-mapping>

</portlet-app>